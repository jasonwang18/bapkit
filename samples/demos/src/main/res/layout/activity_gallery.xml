<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <!--<include layout="@layout/ly_search_titlebar2"/>-->
    <com.supcon.mes.mbap.view.CustomGalleryView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/galleryView"
        app:text_color="@color/textColorlightblack"
        app:bg_color="@color/white"
        app:text="缺陷照片"
        app:text_size="14"
        app:columns="3"
        app:editable="false"
        app:icon_visible="false"
        />
    <com.supcon.mes.mbap.view.CustomGalleryView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/galleryView2"
        app:bg_color="@color/white"
        app:text="缺陷照片"
        app:text_size="14"
        app:columns="3"
        app:editable="true"
        app:icon_visible="true"
        />

</LinearLayout>
</ScrollView>
