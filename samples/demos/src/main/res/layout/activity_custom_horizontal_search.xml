<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.supcon.mes.mbap.view.CustomHorizontalSearchTitleBar
        android:id="@+id/titleBar"
        app:enable_multi_func="true"
        app:title_text="welecome WSZ"
        app:title_length="80dp"
        android:visibility="invisible"
        app:title_right_btn_need="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.supcon.mes.mbap.view.CustomPopupSearchView
        android:id="@+id/customPopupSearchView"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.supcon.mes.mbap.view.CustomSwitchButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
