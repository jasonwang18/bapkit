                app:arrow_icon="@mipmap/ic_launcher"
                android:onClick="onClick"
                />

            <com.supcon.mes.mbap.view.CustomArrowView
                android:id="@+id/horizontalSearchTest"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/sl_white_press"
                app:arrow_text="标题搜索控件测试"
                app:arrow_icon="@mipmap/ic_launcher"
                android:onClick="onClick"
                />

            <com.supcon.mes.mbap.view.CustomArrowView
                android:id="@+id/dialogTest"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/sl_white_press"
                app:arrow_text="对话框控件测试"
                app:arrow_icon="@mipmap/ic_launcher"
                android:onClick="onClick"
                />

            <com.supcon.mes.mbap.view.CustomArrowView
                android:id="@+id/contentDialog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/sl_white_press"
                app:arrow_text="内容展开控件测试"
                app:arrow_icon="@mipmap/ic_launcher"
                android:onClick="onClick"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
