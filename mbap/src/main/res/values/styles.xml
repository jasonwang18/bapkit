    <style name="bottomSheet" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomDialog" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="contentDialog" parent="@android:style/Theme.Dialog">
        <!-- 有无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题 -->
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowEnterAnimation">@anim/content_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/content_dialog_out</item>
    </style>

    <style name="dialogStyle" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="rightDialogStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_right_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_right_exit</item>
    </style>

    <style name="leftInStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dock_left_enter</item>
        <item name="android:windowExitAnimation">@anim/dock_left_exit</item>
    </style>

    <style name="rightInStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dock_right_enter</item>
        <item name="android:windowExitAnimation">@anim/dock_right_exit</item>
    </style>

    <style name="bottomInStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dock_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dock_bottom_exit</item>
    </style>

    <style name="fadeStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

    <style name="settingAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/dock_bottom_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/dock_top_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/dock_top_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/dock_bottom_exit</item>
    </style>


    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/content_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/content_dialog_out</item>
    </style>


</resources>