<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.supcon.mes.mbap.view.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sh_white_stroke"
        app:edit_hint="填写意见"
        app:text_width="0dp"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:id="@+id/commentInput"
        android:tag="commentInput"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/commentInputIv"
            android:tag="commentInputIv"
            android:src="@drawable/ic_comment"
            android:scaleType="center"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            style="@style/BlueButton"
            android:enabled="false"
            android:gravity="center"
            android:id="@+id/saveBtn"
            android:tag="saveBtn">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bottom_save"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_15sp"
                android:paddingLeft="@dimen/dp_5"
                android:text="保存"
                android:id="@+id/saveBtnTv"
                android:tag="saveBtnTv" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_1"
            android:descendantFocusability="blocksDescendants"
            style="@style/OrangeButton"
            android:id="@+id/middleBtn"
            android:visibility="gone"
            android:enabled="false"
            android:gravity="center"
            android:tag="middleBtn">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bottom_cancel"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_15sp"
                android:paddingLeft="@dimen/dp_5"
                android:text="作废"
                android:id="@+id/middleBtnTv"
                android:tag="middleBtnTv" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            style="@style/OrangeButton"
            android:enabled="false"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_1"
            android:id="@+id/submitBtn"
            android:tag="submitBtn">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bottom_submit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_15sp"
                android:paddingLeft="@dimen/dp_5"
                android:text="提交"
                android:id="@+id/submitBtnTv"
                android:tag="submitBtnTv" />

        </LinearLayout>
