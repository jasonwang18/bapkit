<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_3"
    >
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_10"-->
        <!--android:background="@drawable/sh_shadow"-->
        <!--/>-->
    <com.supcon.mes.mbap.view.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sh_light_gray_stroke"
        app:key="处理人(可多选)"
        app:key_size="12"
        app:text_width="120dp"
        app:editable="true"
        app:necessary="true"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:id="@+id/selectPeopleInput"
        android:tag="selectPeopleInput"
        android:visibility="gone"
        />
    <com.supcon.mes.mbap.view.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sh_light_gray_stroke"
        app:edit_hint="填写意见"
        app:text_width="0dp"
        app:icon_visible="true"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:id="@+id/commentInput"
        android:tag="commentInput"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:background="@drawable/sh_light_gray_stroke"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/sl_transparent_press_no_stroke"
            android:id="@+id/commentInputIv"
            android:tag="commentInputIv"
            android:src="@drawable/ic_comment"
            android:scaleType="center"
            />
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sl_transparent_press_no_stroke"
                android:id="@+id/selectPeopleInputIv"
                android:tag="selectPeopleInputIv"
                android:src="@drawable/ic_user_add"
                android:scaleType="center"
                />
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/sh_red_point"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/selectPeoplePoint"
                android:visibility="gone"
                android:tag="selectPeoplePoint" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            style="@style/BlueButtonRadius"
            android:enabled="false"
            android:gravity="center"
            android:id="@+id/saveBtn"
            android:tag="saveBtn">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bottom_save"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_14sp"
                android:paddingLeft="@dimen/dp_5"
                android:text="保存"
                android:id="@+id/saveBtnTv"
                android:tag="saveBtnTv" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:descendantFocusability="blocksDescendants"
            style="@style/OrangeButtonRadius"
            android:id="@+id/middleBtn"
            android:visibility="gone"
            android:enabled="false"
            android:gravity="center"
            android:tag="middleBtn">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bottom_cancel"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_14sp"
                android:paddingLeft="@dimen/dp_5"
                android:text="作废"
                android:id="@+id/middleBtnTv"
                android:tag="middleBtnTv" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            style="@style/OrangeButtonRadius"
            android:enabled="false"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/submitBtn"
            android:tag="submitBtn">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bottom_submit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_14sp"
                android:paddingLeft="@dimen/dp_5"
                android:text="提交"
                android:id="@+id/submitBtnTv"
                android:tag="submitBtnTv" />

        </LinearLayout>
<!--        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/saveBtn"
            style="@style/BlueButton"
            android:tag="saveBtn"
            android:text="保存"
            android:enabled="false"
            android:drawableLeft="@drawable/ic_bottom_save"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            />-->
<!--        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/middleBtn"
            style="@style/OrangeButton"
            android:layout_marginLeft="@dimen/dp_1"
            android:tag="middleBtn"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_bottom_cancel"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/submitBtn"
            style="@style/OrangeButton"
            android:layout_marginLeft="@dimen/dp_1"
            android:tag="submitBtn"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_bottom_submit"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            />-->

    </LinearLayout>

</LinearLayout>