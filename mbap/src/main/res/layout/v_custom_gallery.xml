<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customGalleryTvLayout"
        android:background="@null"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/customGalleryText"
            style="@style/KeyText"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/customGalleryIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/customCameraIv"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_camera_press"
            android:scaleType="center"
            android:src="@drawable/ic_gallery66"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/customCameraIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_camera_press"
            android:scaleType="center"
            android:src="@drawable/ic_camera66"
            android:visibility="visible" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customGalleryTvLayout"
        android:id="@+id/customGallery"
        />



</RelativeLayout>