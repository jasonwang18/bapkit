<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlSearch"
        android:tag="rlSearch"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="60dp"
        >
        <com.supcon.mes.mbap.view.CustomSearchView
            android:id="@+id/searchView"
            android:tag="searchView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/equipmentThemeColor"
            />

        <TextView
            android:id="@+id/searchCancel"
            android:tag="searchCancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:background="@color/equipmentThemeColor"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="invisible"
            tools:ignore="HardcodedText"

            />

    </RelativeLayout>

    <include
        android:id="@+id/searchTitle"
        layout="@layout/ly_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height" />
</RelativeLayout>
