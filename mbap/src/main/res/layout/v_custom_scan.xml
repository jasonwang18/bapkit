<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sh_scan"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/customScanText"
        style="@style/TitleTextColor"
        android:visibility="visible"
        android:gravity="right|center_vertical"
        android:textSize="14sp"
        />
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/customScanInput"
        android:drawablePadding="20dp"
        style="@style/ScanEditText"
        android:paddingLeft="0dp"
        android:drawableRight="@drawable/ic_scan_gray"
        android:completionThreshold="3"
        android:layout_toRightOf="@+id/customScanText"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/customScanDelete"
        android:src="@drawable/ic_delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        />


</RelativeLayout>