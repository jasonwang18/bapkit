<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/customKey"
            style="@style/KeyText"

            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search66"
            android:visibility="visible"
            android:scaleType="center"
            android:padding="@dimen/dp_10"
            android:id="@+id/customEdit"
            android:background="@drawable/sl_transparent_press_no_stroke"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customValue"
            android:minHeight="@dimen/dp_30"
            style="@style/ContentText"
            android:background="@null"
            android:paddingRight="@dimen/dp_20"
            />
        <ImageView
            android:id="@+id/customDeleteIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_clear_small"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_transparent_press_no_stroke"
            android:visibility="gone"
            />


    </RelativeLayout>


</LinearLayout>