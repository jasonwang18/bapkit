<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical"
    >
    <TextView android:id="@+id/msgText" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center" android:layout_marginTop="20dp"
        android:text="确定要删除吗？" style="@style/TitleTextColor" android:textSize="@dimen/fontSize_17sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center" android:layout_marginTop="40dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/redBtn"
            android:text="确定"
            style="@style/OrangeButtonRadius"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/grayBtn"
            android:text="取消"
            style="@style/GrayButtonRadius"
            android:layout_marginLeft="20dp"
            />


    </LinearLayout>

</LinearLayout>