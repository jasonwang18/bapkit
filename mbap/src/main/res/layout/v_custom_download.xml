<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/sl_press_no_stroke"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/downloadLayout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/downloadName"
            style="@style/DetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="@color/textColorlightblack"
            android:textSize="@dimen/fontSize_16sp"
            />
        <TextView
            android:id="@+id/downloadDate"
            style="@style/DetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/fontSize_12sp"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            />
        <TextView
            android:id="@+id/downloadInfo"
            style="@style/DetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorlightblack"
            android:textSize="@dimen/fontSize_12sp"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            />

    </LinearLayout>



    <com.supcon.common.view.view.loader.CircularLoaderView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:id="@+id/downloadLoader"
        android:background="@drawable/sh_loader_default"
        app:spinning_bar_padding="0dp"
        app:spinning_bar_color="@color/customOrange2"
        app:spinning_bar_width="3dp"
        app:initialCornerAngle="0dp"
        app:finalCornerAngle="50dp"
        />

    <com.supcon.mes.mbap.view.CustomCheckBox
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/downloadChk"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:visibility="visible" />
</RelativeLayout>