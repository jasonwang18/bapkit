<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="@dimen/custom_view_width"
        android:layout_height="match_parent"
        android:id="@+id/customSpinnerText"
        style="@style/KeyText"
        android:minHeight="@dimen/dp_30"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/iconLayout"
        >
        <ImageView
            android:id="@+id/customDeleteIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_clear_small"
            android:scaleType="center"
            android:background="@drawable/sl_transparent_press_no_stroke"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/customSpinnerIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_unfold66"
            android:scaleType="center"
            android:padding="@dimen/dp_10"
            android:background="@drawable/sl_transparent_press_no_stroke"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/dp_30"
        style="@style/ContentText"
        android:layout_toRightOf="@+id/customSpinnerText"
        android:layout_toLeftOf="@+id/iconLayout"
        android:id="@+id/customSpinner"
        />
</RelativeLayout>