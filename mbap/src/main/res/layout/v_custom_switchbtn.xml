<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/sh_switch_on"
    android:layout_gravity="center"
    android:id="@+id/customSwitchAllLayout"
    android:padding="1dp"
    >
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/customSwitchBg"
        android:background="@drawable/sh_switchon_orange"
        />

    <LinearLayout
        android:layout_width="@dimen/custom_view_width"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/customSwitchLayout"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/customSwitchOn"
            style="@style/DetailText"
            android:text="开"
            android:gravity="center"
            android:background="@null"
            android:textColor="@color/white"
            android:textSize="12sp"
            />


        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/customSwitchOff"
            style="@style/DetailText"
            android:text="关"
            android:gravity="center"
            android:textColor="@color/customTitleBlueColor"
            android:textSize="12sp"
            android:background="@null"
            />

    </LinearLayout>



</RelativeLayout>