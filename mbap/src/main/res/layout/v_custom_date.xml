<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:id="@+id/customDateText"
        style="@style/KeyText"
        android:visibility="visible"
        android:gravity="center_vertical"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@null"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customDateInput"
            style="@style/ContentText"
            android:layout_marginRight="@dimen/dp_60"

            />
        <ImageView
            android:id="@+id/customDeleteIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_clean"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_transparent_press_no_stroke"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/customDateIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_date2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:background="@drawable/sl_transparent_press_no_stroke"
            />

    </RelativeLayout>




</LinearLayout>
