<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/customTodoIc"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customTodoText"
        style="@style/DetailText2Line"
        android:gravity="center_vertical"
        android:textColor="@color/customTitleBlueColor"
        android:layout_toRightOf="@+id/customTodoIc"
        android:layout_marginRight="@dimen/dp_40"
        android:textSize="@dimen/fontSize_14sp"
        android:padding="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customTodoStatus"
        style="@style/StatusText"
        android:layout_toRightOf="@+id/customTodoIc"
        android:layout_below="@+id/customTodoText"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customTodoTime"
        android:layout_below="@+id/customTodoText"
        style="@style/DetailText"
        android:textSize="@dimen/fontSize_12sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_5"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_right"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"

        />

</RelativeLayout>