<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp"
    android:orientation="vertical"
    >
    <TextView android:id="@+id/msgText" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center" android:layout_marginTop="20dp"
        android:text="确定要提交吗？" style="@style/TitleTextColor" android:textSize="@dimen/fontSize_17sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/blueBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/BlueButtonRadius"
            android:text="保存" />

        <Button
            android:id="@+id/redBtn"
            style="@style/OrangeButtonRadius"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="提交" />

        <Button
            android:id="@+id/grayBtn"
            style="@style/GrayButtonRadius"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="取消" />


    </LinearLayout>

</LinearLayout>