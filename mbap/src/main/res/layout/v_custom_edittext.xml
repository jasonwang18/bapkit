<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="@dimen/custom_view_width"
        android:layout_height="match_parent"
        android:id="@+id/customEditText"
        style="@style/DetailText2Line"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_30"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/iconLayout"
        >
        <ImageView
            android:id="@+id/customDeleteIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_clear_small"
            android:scaleType="center"
            android:background="@drawable/sl_transparent_press_no_stroke"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/customEditIcon"
            android:src="@drawable/ic_write66"
            android:scaleType="center"
            android:visibility="visible"
            android:padding="@dimen/dp_10"
            android:background="@drawable/sl_transparent_press_no_stroke"
            />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/customEditInput"
        style="@style/ContentText"
        android:minHeight="@dimen/dp_30"
        android:layout_toRightOf="@+id/customEditText"
        android:background="@null"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/hintColor"
        android:scrollbarFadeDuration="800"
        android:scrollbarSize="@dimen/dp_1"
        android:layout_toLeftOf="@+id/iconLayout"
        android:gravity="center_vertical"
        android:textColorHint="#80a1a1a1"
        />

</RelativeLayout>